extends layout

block content
  .movie-card(style="max-width:400px; margin:auto;")
    h1 Edit Movie
    if error
      p(style="color:#ff512f") #{error}
    form(method="POST", action=`/api/movies/${movie._id}?_method=PUT`)
      label(for="name") Name:
      input(type="text", name="name", id="name", value=movie.name, required)
      br
      label(for="description") Description:
      textarea(name="description", id="description", required)= movie.description
      br
      label(for="year") Year:
      input(type="number", name="year", id="year", value=movie.year, required)
      br
      label(for="genres") Genres (comma separated):
      input(type="text", name="genres", id="genres", value=movie.genres.join(', '), required)
      br
      label(for="rating") Rating (1-10):
      input(type="number", name="rating", id="rating", value=movie.rating, min="1", max="10", required)
      br
      button(type="submit") Update Movie
    br
    a.btn(href="/api/movies") Back to All Movies